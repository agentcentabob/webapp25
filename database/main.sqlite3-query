CREATE TABLE notes(user_ID INTEGER NOT NULL PRIMARY KEY,note_ID INTEGER NOT NULL,address TEXT NOT NULL,date_created DATETIME DEFAULT CURRENT_TIMESTAMP,date_modified DATETIME DEFAULT CURRENT_TIMESTAMP,note_contents BLOB NOT NULL);
CREATE TABLE notes(user_id INTEGER NOT NULL,note_ID INTEGER NOT NULL,address TEXT NOT NULL,date_created DATETIME DEFAULT CURRENT_TIMESTAMP,date_modified DATETIME DEFAULT CURRENT_TIMESTAMP,note_contents BLOB NOT NULL,FOREIGN KEY (user_id) REFERENCES userinformation2(user_id));
CREATE TABLE articles(
    user_id INTEGER NOT NULL,
    article_id INTEGER NOT NULL,
    article_title TEXT NOT NULL,
    address TEXT NOT NULL,
    date_created DATETIME DEFAULT CURRENT_TIMESTAMP,
    date_modified DATETIME DEFAULT CURRENT_TIMESTAMP,
    likes INTEGER NOT NULL,
    views INTEGER NOT NULL,
    completions INTEGER NOT NULL,
    reposts INTEGER NOT NULL,
    article_contents BLOB NOT NULL,
    FOREIGN KEY (user_id) REFERENCES userinformation2(user_id));

